---
interface Props {
    titulo: string;
    descripcion: string;
    imagenUrl?: string;
}

const { titulo, descripcion, imagenUrl } = Astro.props;
---

<div class = "tarjeta">
    <h2 class="text-black">{titulo}</h2>
    <p class="text-black" set:html={descripcion}></p>
    {imagenUrl && <img src={imagenUrl} alt={titulo} />}
</div>